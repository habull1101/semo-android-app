<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/valueTv"
        app:layout_constraintHorizontal_weight="0.45"
        android:text="Name CPU"
        android:textSize="16sp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp" />

    <TextView
        android:id="@+id/valueTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="0.55"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/titleTv"
        android:text="Snap Dragon 888"
        android:textSize="16sp"
        android:textColor="#0628A1"
        android:paddingTop="6dp"
        android:paddingBottom="6dp" />
</androidx.constraintlayout.widget.ConstraintLayout>